@page "/quizzes"
@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Available Quizzes</h3>

@if (_quizzes == null)
{
    <p>Loading quizzes...</p>
}
else
{
    <div class="quiz-grid">
        @foreach (var quiz in _quizzes)
        {
            <div class="quiz-card">
                <h5>@quiz.Title</h5>
                <p>@quiz.Questions.Count questions</p>
                <button @onclick="() => TakeQuiz(quiz.Id)" class="btn btn-primary">Start Quiz</button>
            </div>
        }
    </div>
}

@code {
    private List<Quiz> _quizzes = new();

    protected override async Task OnInitializedAsync()
    {
        _quizzes = await Http.GetFromJsonAsync<List<Quiz>>("api/quizzes") ?? new List<Quiz>();
    }

    private void TakeQuiz(int quizId)
    {
        NavigationManager.NavigateTo($"/quiz/{quizId}");
    }

    private class Quiz
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public List<Question> Questions { get; set; } = new();
    }

    private class Question
    {
        public string Text { get; set; } = string.Empty;
    }
}
